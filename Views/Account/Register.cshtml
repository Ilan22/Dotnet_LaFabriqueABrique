@model LaFabriqueaBriques.Models.User

<div class="lego-container">
    <h2 class="lego-title">Inscription</h2>
    
    <form asp-action="Register" method="post" class="lego-form auth-form">
        <div class="form-group mb-3">
            <label for="Name" class="form-label">
                <i class="fas fa-user"></i> Nom
            </label>
            <input type="text" class="form-control" asp-for="Name" required />
        </div>
        
        <div class="form-group mb-3">
            <label for="Email" class="form-label">
                <i class="fas fa-envelope"></i> Email
            </label>
            <input type="email" class="form-control" asp-for="Email" required />
        </div>
        
        <div class="form-group mb-3">
            <label for="Password" class="form-label">
                <i class="fas fa-lock"></i> Mot de passe
            </label>
            <input type="password" class="form-control" asp-for="Password" required />
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="lego-button">
                <i class="fas fa-user-plus"></i> S'inscrire
            </button>
        </div>
    </form>
</div>
