<h2>Ajouter un LEGO</h2>
<form asp-action="CreateLego" asp-controller="Admin" method="post">
	<div class="form-group">
		<label for="Name">Nom :</label>
		<input type="text" class="form-control" id="Name" name="Name" />
	</div>

	<div class="form-group">
		<label for="Description">Description :</label>
		<input type="text" class="form-control" id="Description" name="Description" />
	</div>

	<div class="form-group">
		<label for="ImageUrlsInput">URL des Images :</label>
		<textarea class="form-control" id="ImageUrlsInput" name="ImageUrlsInput"></textarea>
		<small class="form-text text-muted">Séparez les URLs par des espaces ou des nouvelles lignes.</small>
	</div>

	<div class="form-group">
		<label for="Price">Prix :</label>
		<input type="text" class="form-control" id="Price" name="Price" oninput="formatDecimal(this)" />
	</div>

	<div class="form-group">
		<label for="Age">Âge :</label>
		<input type="number" class="form-control" id="Age" name="Age" />
	</div>

	<div class="form-group">
		<label for="NbPiece">Nombre de pièces :</label>
		<input type="number" class="form-control" id="NbPiece" name="NbPiece" />
	</div>

	<button type="submit" class="btn btn-primary">Créer LEGO</button>
</form>

<script>
	function formatDecimal(input) {
		// Remplace les points par des virgules
		input.value = input.value.replace('.', ',');
	}
</script>