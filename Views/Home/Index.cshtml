@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<LaFabriqueaBriques.Models.Lego>
<h2>Store</h2>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Âge</th>
            <th>Nombre de pièces</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lego in Model)
        {
            <tr>
                <td>@lego.Id</td>
                <td>@lego.Name</td>
                <td>@lego.Description</td>
                <td>@lego.Price €</td>
                <td>@lego.Age ans</td>
                <td>@lego.NbPiece pièces</td>
                <td>
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@lego.Id" class="btn btn-info btn-sm">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>